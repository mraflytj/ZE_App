                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_location2"
                        android:layout_centerHorizontal="true"
                        android:text="Menyediakan..."
                        android:fontFamily="@font/googlesans"
                        android:textSize="10sp"
                        android:layout_marginTop="10dp"/>

                    <View
                        android:id="@+id/view_Garis2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"
                        android:layout_below="@id/tv_menyediakan2"
                        android:layout_marginTop="7dp"/>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/ic_fav_border"
                        android:layout_below="@id/view_Garis2"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="120dp"
                android:layout_height="200dp"
                android:layout_below="@id/tv_Service"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/img_EO3"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/indicator_blue"/>
                    <TextView
                        android:id="@+id/tv_EO3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_EO3"
                        android:layout_centerHorizontal="true"
                        android:text="Label EO"
                        android:fontFamily="@font/googlesans"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:id="@+id/tv_location3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_EO3"
                        android:layout_centerHorizontal="true"
                        android:text="Location"
                        android:fontFamily="@font/googlesans"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tv_menyediakan3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_location3"
                        android:layout_centerHorizontal="true"
                        android:text="Menyediakan..."
                        android:fontFamily="@font/googlesans"
                        android:textSize="10sp"
                        android:layout_marginTop="10dp"/>

                    <View
                        android:id="@+id/view_Garis3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"
                        android:layout_below="@id/tv_menyediakan3"
                        android:layout_marginTop="7dp"/>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
