<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/registerbackg"
    android:padding="40dp">

    <LinearLayout
        android:id="@+id/layout_Masukdong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/tv_Belum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/googlesans"
            android:text="Sudah punya akun?"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tv_Daftardong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/googlesans"
            android:text="Masuk"
            android:textColor="@color/color2"
            android:layout_marginStart="5dp"
            android:textSize="14sp"/>
    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/buttonGoogle"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:background="@drawable/fbgoogle_btn"
        android:text="@string/masukgoo"
        android:textColor="@android:color/black"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:elevation="20dp"
        android:fontFamily="@font/googlesans"
        android:drawableStart="@drawable/googlelogo"
        android:drawablePadding="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginEnd="5dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/layout_Masukdong"
        android:layout_marginTop="25dp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/buttonFacebook"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:background="@drawable/fbgoogle_btn"
        android:text="@string/masukfb"
        android:textColor="@android:color/black"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:elevation="20dp"
        android:fontFamily="@font/googlesans"
        android:drawableStart="@drawable/fblogo"
        android:drawablePadding="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_toEndOf="@id/buttonGoogle"
        android:layout_marginStart="5dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/layout_Masukdong"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/tv_Atau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/googlesans"
        android:text="atau masuk dengan"
        android:textSize="14sp"
        android:layout_below="@id/buttonGoogle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <View
        android:layout_width="90dp"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_toEndOf="@id/tv_Atau"
        android:layout_below="@id/buttonFacebook"
        android:layout_marginTop="30dp"
        android:layout_marginStart="13dp"/>

    <View
        android:layout_width="90dp"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_toStartOf="@id/tv_Atau"
        android:layout_below="@id/buttonGoogle"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="13dp"/>

    <EditText
        android:layout_marginTop="25dp"
        android:id="@+id/eT_Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number|textEmailAddress"
        android:hint="@string/useremail"
        android:background="@drawable/fbgoogle_btn"
        android:padding="12dp"
        android:layout_below="@id/tv_Atau"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/buttonDaftar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_sign"
        android:text="@string/daftar"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_below="@id/eT_Email"
        android:layout_marginTop="40dp"
        android:elevation="20dp"
        android:fontFamily="@font/googlesans"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"/>
    
    <!--<ProgressBar-->
        <!--android:id="@+id/pb_LoadingRegister"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@drawable/loading"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_below="@id/eT_Email"/>-->

</RelativeLayout>