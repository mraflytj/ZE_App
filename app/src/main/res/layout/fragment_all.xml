<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <ImageView
                android:id="@+id/imgNotif"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/indicator_blue"/>
            <TextView
                android:id="@+id/tvKode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imgNotif"
                android:text="Kode Booking"
                android:fontFamily="@font/googlesans"
                android:textSize="16sp"
                android:layout_marginStart="15dp"/>
            <TextView
                android:id="@+id/tvPaket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imgNotif"
                android:layout_below="@id/tvKode"
                android:text="Paket"
                android:fontFamily="@font/googlesans"
                android:textSize="14sp"
                android:layout_marginStart="15dp"/>
            <TextView
                android:id="@+id/tvHarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvPaket"
                android:layout_toEndOf="@id/imgNotif"
                android:text="Harga"
                android:fontFamily="@font/googlesans"
                android:textSize="14sp"
                android:layout_marginStart="15dp"/>

            <TextView
                android:id="@+id/tvVerif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proses"
                android:fontFamily="@font/googlesans"
                android:textSize="14sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/color2"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    
</LinearLayout>