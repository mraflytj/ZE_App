<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/homebg">

    <!--<ImageView-->
        <!--android:id="@+id/iv_Logo"-->
        <!--android:layout_width="150dp"-->
        <!--android:layout_height="150dp"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="50dp"-->
        <!--android:src="@drawable/zelogo"/>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp">

        <TextView
            android:id="@+id/textView_Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/googlesans"
            android:textColor="@color/colorputih"
            android:textSize="48sp"
            tools:text="@string/login"
            android:layout_marginStart="45dp"/>

        <EditText
            android:layout_marginTop="110dp"
            android:id="@+id/editText_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="@string/useremail"
            android:background="@drawable/fbgoogle_btn"
            android:padding="12dp"
            android:layout_below="@id/textView_Login" />
        <EditText
            android:id="@+id/editText_Pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="@string/prompt_password"
            android:background="@drawable/fbgoogle_btn"
            android:padding="12dp"
            android:layout_below="@id/editText_Email"
            android:layout_marginTop="20dp"
            />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/buttonLogin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_sign"
            android:text="@string/login"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_below="@id/editText_Pass"
            android:layout_marginTop="40dp"
            android:elevation="20dp"
            android:fontFamily="@font/googlesans"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>

        <TextView
            android:id="@+id/tv_Atau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/googlesans"
            android:text="atau masuk dengan"
            android:textSize="14sp"
            android:layout_below="@id/buttonLogin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/buttonGoogle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fbgoogle_btn"
            android:text="@string/masukgoo"
            android:textColor="@android:color/black"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_below="@id/tv_Atau"
            android:layout_marginTop="25dp"
            android:elevation="20dp"
            android:fontFamily="@font/googlesans"
            android:drawableStart="@drawable/googlelogo"
            android:drawablePadding="20dp"
            android:paddingStart="15dp"
            android:paddingEnd="50dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/buttonFacebook"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fbgoogle_btn"
            android:text="@string/masukfb"
            android:textColor="@android:color/black"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_below="@id/buttonGoogle"
            android:layout_marginTop="15dp"
            android:elevation="20dp"
            android:fontFamily="@font/googlesans"
            android:drawableStart="@drawable/fblogo"
            android:drawablePadding="20dp"
            android:paddingStart="15dp"
            android:paddingEnd="50dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>

        <LinearLayout
            android:id="@+id/layout_Daftardong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonFacebook"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/tv_Belum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/googlesans"
                android:text="Belum punya akun?"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_Daftardong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/googlesans"
                android:text="Daftar"
                android:textColor="@color/color2"
                android:layout_marginStart="5dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <View
            android:layout_width="90dp"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_toEndOf="@id/tv_Atau"
            android:layout_below="@id/buttonLogin"
            android:layout_marginTop="35dp"
            android:layout_marginStart="13dp"/>
        <View
            android:layout_width="90dp"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_toStartOf="@id/tv_Atau"
            android:layout_below="@id/buttonLogin"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="13dp"/>
    </RelativeLayout>
</ScrollView>