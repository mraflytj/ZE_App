                <!--app:layoutManager="android.support.v7.widget.LinearLayoutManager"-->
                <!--android:layout_below="@id/tv_Feed"-->
                <!--android:layout_marginTop="20dp"/>-->

            <RelativeLayout
                android:id="@+id/layout_top"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@id/layoutAtas"
                android:layout_marginTop="15dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <raflyjamalullail.com.ze_app._sliders.SliderView
                        android:id="@+id/sliderView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_indicator" />

                <LinearLayout
                    android:id="@+id/pagesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_Category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cate"
                android:fontFamily="@font/googlesans"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:layout_below="@id/layout_top"
                android:layout_marginTop="25dp"/>

            <android.support.v7.widget.CardView
                android:id="@+id/CardView"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                android:layout_below="@id/tv_Category"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/tv_Service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/service"
                android:fontFamily="@font/googlesans"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:layout_below="@id/CardView"
                android:layout_marginTop="25dp"/>

            <TextView
                android:id="@+id/tv_SeeAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/see_all"
                android:fontFamily="@font/googlesans"
                android:textSize="14sp"
                android:layout_below="@id/CardView"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"/>
            
            <android.support.v7.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="120dp"
                android:layout_height="200dp"
                android:layout_below="@id/tv_Service"
                android:layout_marginTop="10dp"
                android:layout_alignParentStart="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/img_EO1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/indicator_blue"/>
                    <TextView
                        android:id="@+id/tv_EO1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_EO1"
                        android:layout_centerHorizontal="true"
                        android:text="Label EO"
                        android:fontFamily="@font/googlesans"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:id="@+id/tv_location1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_EO1"
                        android:layout_centerHorizontal="true"
                        android:text="Location"
                        android:fontFamily="@font/googlesans"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tv_menyediakan1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_location1"
                        android:layout_centerHorizontal="true"
                        android:text="Menyediakan..."
                        android:fontFamily="@font/googlesans"
                        android:textSize="10sp"
                        android:layout_marginTop="10dp"/>

                    <View
                        android:id="@+id/view_Garis1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"
                        android:layout_below="@id/tv_menyediakan1"
                        android:layout_marginTop="7dp"/>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/ic_fav_border"
                        android:layout_below="@id/view_Garis1"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="120dp"
                android:layout_height="200dp"
                android:layout_below="@id/tv_Service"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
